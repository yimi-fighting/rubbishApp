.container {
  display: flex;
  overflow-y: scroll;
  height: 100%;
}
.container .movableArea {
  position: absolute;
  width: 100%;
  height: 100vh;
  pointer-events: none;
}
.container .movableView {
  width: 100px;
  height: 30px;
  pointer-events: auto;
  z-index: 999;
}
.container .movableView .card {
  padding: 5px;
  line-height: 30px;
  font-size: 15px;
  text-align: center;
  margin: 10px;
  border-radius: 10px;
  border: 1px solid black;
  box-shadow: -5px -5px 5px rgba(0, 0, 0, 0.2);
}
.container .lajiton {
  position: relative;
  top: 190px;
}
.container .lajiton .refushBin {
  display: flex;
  height: 65vh;
  justify-content: space-around;
  flex-wrap: wrap;
  align-items: center;
}
.container .lajiton .refushBin .bin {
  width: 40%;
  height: 150px;
  border-radius: 20px;
  line-height: 60px;
  text-align: center;
  font-size: 30px;
  padding: 5px;
}
.container .lajiton .refushBin .bin image {
  width: 100%;
  height: 100%;
  border-radius: 20px;
}
.container .lajiton .refushBin .kehuishoulaji {
  background-color: #0168b7;
  text-shadow: 5px 5px rgba(0, 0, 0, 0.2);
  box-shadow: 0 0 10px #0168b7;
}
